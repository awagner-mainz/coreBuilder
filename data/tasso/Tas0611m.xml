            <lg>
                <head>Prima parte</head>
                <l xml:id="l1">La bella pargoletta</l>
                <l xml:id="l2"><seg xml:id="v1">Ch'anchor non sente</seg> amore</l>
                <l xml:id="l3">Ne <seg xml:id="v2">pur noto ha per fam'</seg>il suo valore</l>
                <l xml:id="l4"><seg xml:id="v3">Co' begl'occhi</seg> saetta</l>
                <l xml:id="l5">E co'l <seg xml:id="v4">soave</seg> riso</l>
                <l xml:id="l6">Ne <seg xml:id="v5">s’accorge che l’arme ha nel bel</seg> viso.</l>
            </lg>
            <lg>
                <head>Seconda parte</head>
                <l xml:id="l7"><seg xml:id="v6">Qual</seg> colp'ha <seg xml:id="v7">del</seg> morire</l>
                <l xml:id="l8">De la trafitta gente</l>
                <l xml:id="l9">Se non sa di ferire</l>
                <l xml:id="l10">O <seg xml:id="v7">bellezza homicida</seg> &amp; innocente</l>
                <l xml:id="l11">Temp<seg xml:id="v8">è ch'amor ti mostri</seg></l>
                <l xml:id="l12"><seg xml:id="v9">Homai ne le tue piaghe i dolor</seg> nostri.</l>
            </lg>
