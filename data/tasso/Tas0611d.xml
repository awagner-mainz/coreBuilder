            <lg>
                <l xml:id="l1">La bella pargoletta</l>
                <l xml:id="l2"><seg xml:id="v1">Ch'ancor non sent'</seg>amore</l>
                <l xml:id="l3">Ne <seg xml:id="v2">pur noto ha per prova</seg> il suo valore</l>
                <l xml:id="l4"><seg xml:id="v3">Co'l bel guardo</seg> saetta</l>
                <l xml:id="l5">E co'l <seg xml:id="v4">soave</seg> riso</l>
                <l xml:id="l6">Ne <seg xml:id="v5">s’accorge che l’armi ha nel bel</seg> viso</l>
                <l xml:id="l7"><seg xml:id="v6">Qual</seg> colp'ha <seg xml:id="v7">del</seg> morire</l>
                <l xml:id="l8">Della misera gente</l>
                <l xml:id="l9">Se non sa di ferire</l>
                <l xml:id="l10">O <seg xml:id="v7">bellezz'homicid'</seg>et innocente</l>
                <l xml:id="l11">Temp'<seg xml:id="v8">e ch'amor ti mostri</seg></l>
                <l xml:id="l12"><seg xml:id="v9">Homai nelle tue piaghe i dolor</seg> nostri.</l>
            </lg>
        </body>
