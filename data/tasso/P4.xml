    <text>
        <body xml:space="preserve">
            <lg type="stanza">
                <l xml:id="l1">La bella pargoletta</l>
                <l xml:id="l2"><seg xml:id="v1">Ch'ancor non sente</seg> Amore,</l>
                <l xml:id="l3">Ne <seg xml:id="v2">pur not'ha per fama</seg> il suo valore</l>
            </lg>
            <lg>
                <l xml:id="l4"><seg xml:id="v3">Co' begli occhi</seg> saetta</l>
                <l xml:id="l5">E col <seg xml:id="v4">soave</seg> riso,</l>
                <l xml:id="l6">Ne <seg xml:id="v5">s'accorge che l'armi hà nel bel</seg> viso</l>
            </lg>
            <lg>
                <l xml:id="l7"><seg xml:id="v6">Qual</seg> colpa ha <seg xml:id="v7">del</seg> morire,</l>
                <l xml:id="l8">De la trafitta gente.</l>
                <l xml:id="l9">Se non sà di ferire.</l>
                <l xml:id="l10">O' <seg xml:id="v7">bellezza homicida</seg>, et innocente</l>
                <l xml:id="l11">Temp'<seg xml:id="v8">è, ch'Amor ti mostri</seg></l>
                <l xml:id="l12"><seg xml:id="v9">Homai ne le tue piaghe i dolor</seg> nostri</l>
            </lg>
        </body>
    </text>
